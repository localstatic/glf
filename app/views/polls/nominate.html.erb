<h2>Nominate Places</h2>
<div class="poll-info">
  <strong>Poll:</strong> <%= @poll.name %>
  <br>
</div>
<%= form_tag add_options_poll_path(@poll), class: "form-inline" do %>
  <table class="table table-hover">
    <% @places.each do |place| %>
      <tr>
        <td class="controls">
          <% checkbox_name = "places[#{place.id}]" %>
          <%= label_tag(checkbox_name, check_box_tag(checkbox_name, place.id) + " " + place_name_link(place), class: "checkbox") %>
        </td>
        <td>
          <%= [place.city, place.state].join(", ").gsub(/^, /, "").gsub(/, $/, "") %>
        </td>
      </tr>
    <% end %>
  </table>
  <div>
    <%= submit_tag "Nominate", class: "btn btn-primary" %>
  </div>
<% end %>
