<tr>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= user.sign_in_count %></td>
  <td><%= user.current_sign_in_at.nil? ? user.last_sign_in_at : user.current_sign_in_at %></td>
  <td>
    <%= link_to "View", user_path(user), class: "btn btn-mini btn-primary" %>
    <% if can? :edit, user %>
      <%= link_to "Edit", edit_user_path(user), class: "btn btn-mini" %>
    <% end %>
    <% if can? :destroy, user %>
      <%= link_to "Delete", user_path(user), confirm: "Are you sure you want to delete this user?", method: :delete, class: "btn btn-mini btn-danger" %>
    <% end %>
  </td>
</tr>
