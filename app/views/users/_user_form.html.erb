<%= form_for @user do |f| %>
  <div class="controlgroup">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="controlgroup">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="controlgroup">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="controlgroup">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <% if can? :destroy, @user %>
      <%= link_to "Delete User", user_path(@user), confirm: "Are you sure you want to delete this user?", method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
<% end %>
