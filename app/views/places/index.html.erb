<h2>Places</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="2">
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%= render @places %>
  </tbody>
</table>

<%= will_paginate @places %>
<% if can? :create, Place %>
  <%= link_to "Add Place", new_place_path %>
<% end %>
